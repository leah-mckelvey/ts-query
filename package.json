{
  "name": "ts-query",
  "version": "1.0.0",
  "description": "A generic query client that works for different frameworks",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run build --workspaces --if-present && vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "npm run build --workspaces --if-present && vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint \"packages/**/*.{ts,tsx,js,jsx}\"",
    "check": "npm run format:check && npm run lint && npm run test:coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "query",
    "react",
    "mithril",
    "state-management",
    "async"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/react-vite": "^10.1.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/mithril": "^2.2.7",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "storybook": "^10.1.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
