{
  "name": "ts-query",
  "version": "1.0.0",
  "description": "A generic query client that works for different frameworks",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "query",
    "react",
    "mithril",
    "state-management",
    "async"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@storybook/react-vite": "^10.1.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/mithril": "^2.2.7",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@vitest/ui": "^4.0.15",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "storybook": "^10.1.6",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
